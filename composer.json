{
    "name": "p8p/symfony-bundle",
    "description": "Symfony bundle for P8P Kubernetes client",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Jacottet",
            "email": "jjacottet@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "p8p/client": "self.version",
        "p8p/sdk": "self.version",
        "symfony/framework-bundle": "^7.3",
        "symfony/console": "^7.3"
    },
    "suggest": {
        "p8p/generator": "Required for generating Custom Resource Definition (CRD) classes with p8p:generate:crd command"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.0",
        "symfony/var-dumper": "^7.3",
        "symfony/yaml": "^7.3",
        "symfony/web-profiler-bundle": "^7.3",
        "symfony/stopwatch": "^7.3",
        "p8p/generator": "self.version"
    },
    "autoload": {
        "psr-4": {
            "P8p\\Bundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "P8p\\Bundle\\Tests\\": "tests",
            "P8p\\Bundle\\Tests\\TestApplication\\": "tests/TestApplication/src"

        }
    }
}
